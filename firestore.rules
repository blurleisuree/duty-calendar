rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Пример: доступ к коллекции duties только для аутентифицированных пользователей
    match /duties/{document=**} {
      allow read, write: if request.auth != null;
    }
    // Блокировка доступа к appSettings (если больше не используется для пароля)
    match /appSettings/{document=**} {
      allow read, write: if false; // Или настройте для админов
    }
  }
}